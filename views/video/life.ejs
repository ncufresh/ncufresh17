        <button type="button" class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#edit">加入影片</button>
        <!-- 修改排序model -->
        <div class="modal fade" id="edit" role="dialog">
            <div class="modal-dialog modal-lg">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">加入影片</h4>
                    </div>
                    <div class="modal-body">
                        <form action="/video/add" method="post" accept-charset="utf-8">

                            <div class="form-group">
                                <label for="type" class="control-label">選擇影片名稱</label>
                                <select name="type" id="change_order_id" class="form-control">
                                    <option selected="not_commonly_used_link" value="food">【中大生活-食】</option>
                                    <option selected="not_commonly_used_link" value="housing">【中大生活-住】</option>
                                    <option selected="not_commonly_used_link" value="transportation">【中大生活-行】</option>
                                    <option selected="not_commonly_used_link" value="education">【中大生活-育】</option>
                                    <option selected="not_commonly_used_link" value="entertainment">【中大生活-樂】</option>
                                    <option selected="" value="">請選擇</option>
                                </select>
                            </div>

                            <div class='form-group'>
                                <label id="not_commonly_used_link_label" style="display:inline-block;" for="content">請在Youtube影片下按分享 -> 嵌入 -> 複製整串編碼後貼上</label>
                                <textarea id="textarea" name="content" rows="8" cols="80"></textarea><br>
                            </div>

                            <button type="submit" name="button" class="btn btn-primary" id="warn">< 加入影片 ></button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>


