<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../layouts/head %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function(){
        $(".cc").mouseenter(function(){
                $(this).animate({
                    padding:'0px'
                }, 200);
        });
        $(".cc").mouseleave(function(){
                $(this).animate({
                    padding:'2vh'
                }, 200);
        });
        $(".g1").click(function(){
            $("#videofood").html("")
        });
        $("#f1").click(function(){
            $("#videofood").html('<%- foodURL %>')
        });
        $(".g2").click(function(){
            $("#videohousing").html("")
        });
        $("#f2").click(function(){
            $("#videohousing").html('<%- housingURL %>')
        });
        $(".g3").click(function(){
            $("#videotransportation").html("")
        });
        $("#f3").click(function(){
            $("#videotransportation").html('<%- transportationURL %>')
        });
        $(".g4").click(function(){
            $("#videoeducation").html("")
        });
        $("#f4").click(function(){
            $("#videoeducation").html('<%- educationURL %>')
        });
        $(".g5").click(function(){
            $("#videoentertainment").html("")
        });
        $("#f5").click(function(){
            $("#videoentertainment").html('<%- entertainmentURL %>')
        });
        $("#warn").click(function(){
            alert("記得一定要先試試看能不能開, 影音組的各位不要一直只想著放假 加油好嗎");
        });
    });
    </script>
</head>
<body>
    <header>
        <% include ../layouts/navbar %>
