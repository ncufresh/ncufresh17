              $("#food-pan").css({"display":"block"});
              $("#dorm-pan,traffic-pan,study-pan,entertainment-pan").slideUp(1200).css({"display":"none"});
          }
          else{
              foodtoggle = -foodtoggle;
              $("#life-navigate-1,#life-navigate-2,#life-navigate-3,#life-navigate-4,#life-navigate-5").animate({opacity: '1'}, 200);
