        $("#life-navigate-1").click(function(){
          if(foodtoggle == true){
              foodtoggle = -foodtoggle;
              dormtoggle = traffic = studytoggle = entertainmenttoggle = true;
              $("#life-navigate-2,#life-navigate-3,#life-navigate-4,#life-navigate-5").animate({opacity: '0.3'}, 200);
              $("#life-navigate-1,#life-navigate-back").animate({opacity: '1.0'}, 200);
