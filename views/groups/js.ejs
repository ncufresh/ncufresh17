  <script>
  $(document).ready(function(){
      
      $('.delete_de').click(function(){
          if(confirm("確定要刪除?")){
              var id = $(this).val();
              $.ajax({
                  url:    '/groups/delete_de/'+ id,
                  type:   'GET',
                  error: function(e){
                      console.log("ERR  :"+e);
                  },
                  success: function(data){
                      $('#'+ id).remove();
                  }
              });
          }
      })
      $('.edit_de').click(function(){
        var id = $(this).val();
        $.ajax({
        	type: "get",
            url:    "/groups/edit_de/"+ id,
            error: function(e){
                console.log("ERR  :"+e);
            },
            success: function(data){
                $("#edit_id").val(data._id);
                $("#edit_name").val(data.name);
                $("#edit_type").val(data.type);
                CKEDITOR.instances['edit_introduction'].setData(data.introduction);
                CKEDITOR.instances['edit_organization'].setData(data.organization);
                CKEDITOR.instances['edit_activity'].setData(data.activity);
                CKEDITOR.instances['edit_team'].setData(data.team);
                CKEDITOR.instances['edit_course'].setData(data.course);
                $("#edit_de").modal("show");
            }

        });
    })
  })
  </script>

