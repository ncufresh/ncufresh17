<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../layouts/head %>
</head>
<body>
  <header>
    <% include ../layouts/navbar %>
    <% include css.ejs %>
  </header>

  <div><%# 側導覽列 %>
    <ul id="navi" style="height:100%; margin-top: 10px;">
      <li><a href="#" type="button" style="background-image: url('images/btn_all.png');"></a></li>
      <li><a href="#" type="button" style="background-image: url('images/btn_hot.png');"></a></li>
      <li><a href="#" type="button" style="background-image: url('images/btn_school.png');"></a></li>
      <li><a href="#" type="button" style="background-image: url('images/btn_student.png');"></a></li>
      <li><a href="#" type="button" style="background-image: url('images/btn_dorm.png');"></a></li>
      <li><a href="#" type="button" style="background-image: url('images/btn_other.png');"></a></li>
      <li><a href="#" type="button" style="background-image: url('images/btn_post.png');" data-toggle="modal" data-target="#post"></a></li>
    </ul>
  </div><%# /側導覽列 %>

  <main style="background-image: url('images/bg.png'); background-size: cover; background-repeat: no-repeat;">
    <div class="container">
      <%# 熱門問題 %>
      <div>
        <h1>熱門問題</h1>
        <p>歡迎發問</p>
        <table class="table table-hover">
          <tr>
            <td>類別</td>
            <td>日期</td>
            <td>標題</td>
            <td>觀看人數</td>
          </tr>
          <% qna.forEach( function (q) { %>
            <tr>
              <td><%= typeToName[q.type] %></td>
              <td><%= renderTime(q.updated) %></td>
              <td><%= q.title %></td>
              <td><%= q.view %></td>
            </tr>
          <% }); %>
        </table>
        <%# /熱門問題 %>
        <%# 所有問題 %>
        <h1>所有問題</h1>
        <table class="table table-hover">
          <tr>
            <td>類別</td>
            <td>日期</td>
            <td>標題</td>
            <td>觀看人數</td>
          </tr>
          <% qna.forEach( function (q) { %>
            <tr>
              <td><%= typeToName[q.type] %></td>
              <td><%= renderTime(q.updated) %></td>
              <td><%= q.title %></td>
              <td><%= q.view %></td>
            </tr>
          <% }); %>
        </table>
      </div>
      <%# /所有問題 %>
      <%# 分頁導覽 %>
      <div>
        <ul class="pagination">
          <li><a href="#"><span aria-hidden="true">&laquo;</span><span class="sr-only">Previous</span></a></li>
          <li><a href="#">1</a></li>
          <li><a href="#">2</a></li>
          <li><a href="#">3</a></li>
          <li><a href="#">4</a></li>
          <li><a href="#">5</a></li>
          <li><a href="#"><span aria-hidden="true">&raquo;</span><span class="sr-only">Next</span></a></li>
        </ul>
      </div>
      <%# /分頁導覽 %>
      <% if (user) { %>
        <div class="modal fade" id="post" role="dialog"><%# 發問用 Modal %>
          <div class="modal-dialog modal-lg">
            
            <div class="modal-content"><%# Modal %>
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">發問ING</h4>
              </div>

              <div class="modal-body">
                <form method="POST" action="/qna">
                  <div class="form-group">
                    <label for="title">標題</label>
                    <input id="title" name="title" type="text" class="form-control">
                  </div>
                  <div class="form-group">
                    <label for="content">詳細描述</label>
                    <textarea id="content" name="content" class="form-control" rows="5"></textarea>
                  </div>
                  <div>
                    <select name="type" class="form-control">
                      <option value="0">校園生活</option>
                      <option value="1">學生事務</option>
                      <option value="2">宿舍生活</option>
                      <option value="3">其他</option>
                    </select>
                  </div>
                  <div>
                    <button type="submit" class="btn btn-default">送出</button>
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">取消</button>
              </div><%# /Modal 內文 %>
            </div><%# /Modal %>
            
          </div>
        </div><%# /發問用 Modal %>
      <% } else { %>
        <div class="modal fade" id="post" role="dialog"><%# 請登入 Modal %>
          <div class="modal-dialog modal-lg">
            
            <div class="modal-content"><%# Modal %>
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title text-center">發問前請先登入喔</h3>
              </div>

              <div class="modal-body">
                <div class="modal-body"><h4>點選"前往登入"乖乖去登入</h4></div>
                <div class="modal-body"><h4>點選"取消"繼續瀏覽新生Ｑ＆Ａ</h4></div>
              </div>

              <div class="modal-footer">
                <a href="/login" type="button" class="btn btn-default">前往登入</a>
                <button type="button" class="btn btn-danger" data-dismiss="modal">取消</button>
              </div><%# /Modal 內文 %>
            </div><%# /Modal %>
            
          </div>
        </div><%# /請登入 Modal %>
      <% } %>

    </div>
  </main>
  <footer>
    <% include ../layouts/footer %>
  <footer>
  <% include ../layouts/js %>
  <% include js %>
</body>
</html>
