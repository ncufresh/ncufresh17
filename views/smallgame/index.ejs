    <main>
      <div class="container" >


        <div class="jumbotron" id="menu">

        <!--audio-->
        <audio id="bgm" loop="loop"><source src="/game/bensound-littleidea.mp3" type="audio/mpeg"></audio>
        <audio id="bingo"><source src="/game/correct.mp3" type="audio/mpeg"></audio>
        <audio id="ding"><source src="/game/wrong.mp3" type="audio/mpeg"></audio>
        <audio id="gamestart" loop="loop"><source src="/game/bensound-funkyelement.mp3" type="audio/mpeg"></audio>
        <audio id="gameend"><source src="/game/bensound-ukulele.mp3" type="audio/mpeg"></audio>
        <!--audio-->

            <!--BUTTON-->

                <!--MAIN MENU-->
                <div>
                <span class="glyphicon glyphicon-volume-off" onclick="mute()" id="mute"></span>
                <span class="glyphicon glyphicon-music" onclick="musicon()" id="music"></span>
                </div>

                <div class="button" id="menubutton">
                    <button type="button" onclick="start()">遊戲開始</button>
                    <button type="button" onclick="rules()">遊戲說明</button>
                    <button type="button" onclick="m2()">個人積分及排行榜</button>
                </div>

                <div class="button" id="rankbutton">    
                    <button type="button" data-toggle="modal" data-target="#personal_score">個人積分</button>
                    <button type="button" data-toggle="modal" data-target="#rank">排行榜</button>
                    <button type="button" onclick="back()">返回</button>
                </div>

                <p id="musicsrc"> Music: http://www.bensound.com</p>
                <!--MAIN MENU-->

                <!--BUTTON for RULES-->
                <div id="box">
                    <img id="target" alt="rules"/>
                    <button type="button" id="cls" onclick="cloSe()">X </button>
                    <button type="button" id="nxt" onclick="nextPic()" ></button>
                    <button type="button" id="pre" onclick="prePic()"></button>
                    
                </div>
                <!--BUTTON for RULES-->

            <!--BUTTON-->

            <!--GAME-->
            <div id="game">
                
                <div id="row1"> <!--player pic and clock and pc pic-->
                    <!--Player-->
                    <div class="col-xs-4" id="playerpic"><img src="/personal/profile/<%= user.local.img %>" alt="player"></div>
                    <!--Player-->

                    <div class="col-xs-4" id="vs"><p>V.S.</p></div>

                    <!--CLOCK & ROUND NO.-->
                    <div class="col-xs-4" id="countdown">
                        <div class="countdown-number"></div>
                        <svg>
                        <circle r="69.85699" cx="81" cy="81"></circle>
                        </svg>
                        <div class="round-number"></div>
                    </div>
                    <!--CLOCK & ROUND NO.-->

                    <!--PC-->
                    <div class="col-xs-4" id="pcpic"><img src="/game/pc.png" alt="pc"></div>
                    <!--PC-->
                </div>


                <!--POINT-->
                <div id="row2">
                    <div class="col-xs-4" id="plyptn"></div>
                    <div class="col-xs-4" id="pcptn"></div>
                </div>
                <!--POINT-->
                
                <!--Point BAR-->
                <div id="row3"> <!--health bar & QnA-->
            
                    <div class="col-xs-4" id="bar1">
                        <div id="plyhealth"></div>
                    </div>
                <!--Point BAR-->

                <!--Q&A-->
                    <div class="col-xs-4" id="question">
                        <div class="Q" ><p id="q"></p></div>
                        <div class="A" >
                            <div><button type="button" onclick="answer1()">
                                    <span class="glyphicon glyphicon-ok" id="correct01"></span>
                                    <span class="glyphicon glyphicon-remove" id="wrong01"></span>
                                    <span class="glyphicon glyphicon-ok" id="correct001"></span>
                                    <span class="glyphicon glyphicon-remove" id="wrong001"></span>
                                    <p id="ans1"></p>
                                    </button>
                            </div>
                            <div><button type="button" onclick="answer2()">
                                    <span class="glyphicon glyphicon-ok" id="correct02"></span>
                                    <span class="glyphicon glyphicon-remove" id="wrong02"></span>
                                    <span class="glyphicon glyphicon-ok" id="correct002"></span>
                                    <span class="glyphicon glyphicon-remove" id="wrong002"></span>
                                    <p id="ans2"></p>
                                    </button>
                            </div>
                            <div><button type="button" onclick="answer3()">
                                    <span class="glyphicon glyphicon-ok" id="correct03"></span>
                                    <span class="glyphicon glyphicon-remove" id="wrong03"></span>
                                    <span class="glyphicon glyphicon-ok" id="correct003"></span>
                                    <span class="glyphicon glyphicon-remove" id="wrong003"></span>
                                    <p id="ans3"></p>   
                                    </button>
                            </div>
                            <div><button type="button" onclick="answer4()">
                                    <span class="glyphicon glyphicon-ok" id="correct04"></span>
                                    <span class="glyphicon glyphicon-remove" id="wrong04"></span>
                                    <span class="glyphicon glyphicon-ok" id="correct004"></span>
                                    <span class="glyphicon glyphicon-remove" id="wrong004"></span>
                                    <p id="ans4"></p>
                                </button>
                            </div>
                        </div>
                    </div>
                <!--Q&A-->

                <!--Point BAR-->
                    <div class="col-xs-4" id="bar2">
                        <div id="pchealth"></div>
                    </div>
                <!--Point BAR-->
                </div><!--ROW3 END-->
                

                <!--GETSCORE-->
                <div id="score">
                    
                        <div class="col-xs-4" id="plytotal"></div>
                        <div class="col-xs-4" id="plybonus"></div>
                    
                        <div class="col-xs-4" id="pctotal"></div>
                        <div class="col-xs-4" id="pcbonus"></div>
                   
                    <button type="button" class="gend" id="end01">NEXT</button>
                    <button type="button" class="gend" id="end02">NEXT</button>
                </div>

                 <div id="userscore">
                    <img src="/personal/profile/<%= user.local.img %>" alt="player" id="last">
                    <div id="username"><%=user.local.name%></div>
                    <div id="userpoint"></div>
                    <button type="button" onclick="self.location.href='/smallgame'" >返回遊戲主頁</button>
                </div>
                <!--GETSCORE-->

            </div>
            <!--GAMEEND-->

            <!--RANK-->
            <div class="modal fade" id="rank" role="dialog">
            <div class="modal-dialog" >
                <div class="modal-content" id="rank01">
                        <h2 class="modal-title" align="center" style="font-weight:bold;margin-top: 8px;">總積分榜TOP10</h1>
                        <table id="table">
                            <tr>
                                <th>#</th>
                                <th>玩家名稱</th> 
                                <th>總積分</th>
                            </tr>
                            <%for(var i in result){%>
                            <tr>
                                <td><%=rank[i]%></td>
                                <td><%=result[i].name%></td> 
                                <td><%=result[i].score%></td>
                            </tr>
                            <%}%>
                            <%if(result.length<11){  
                                for(var i=result.length+1;i<11;i++){%> <!--if dont have top 10 then blank-->
                                <tr>
                                <td><%=i%></td>
                                <td></td> 
                                <td></td>
                                </tr>
                            <%}}%>
                        </table>
                    <button type="button" data-dismiss="modal" class="end">CLOSE</button>
                </div>
            </div>
            </div>
            <!--RANK-->

            <!--PERSONAL SCORE-->
            <div class="modal fade" id="personal_score" role="dialog">
                <div class="modal-dialog" >
                    <div class="modal-content" id="score01">
                        <div id="plypic">
                            <img class="img-thumbnail" src="/personal/profile/<%= user.local.img %>">
                            <p>姓名: <%=user.local.name%>
                            <br>目前總共<%if(player==0){%>0<%}else{%><%=player.score%><%}%>個積分</p>
                        </div>
                        <div id="score_final"><p><%if(player==0){%>0<%}else{%><%=player.score%><%}%></p></div>
                        <button type="button" data-dismiss="modal" class="end">CLOSE</button>
                    </div>
                </div>
            </div>
            <!--PERSONAL SCORE-->

        </div>
        </div>
