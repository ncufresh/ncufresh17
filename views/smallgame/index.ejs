/*CLOCK*/
#countdown {
  position: relative;
  margin-left: 280px;
  margin-top: -10px;
  padding-top: 18px;
  padding-left: 35px;
  height: 140px;
  width: 140px;
  text-align: center;
  
}

.countdown-number {
    font-size: 40px;
  color: black;
  display: inline-block;
  line-height: 125px;
}

svg {
    position: absolute;
    top:0;
    left:0;
    width: 160px;
    height: 160px;
    transform: rotateY(-180deg) rotateZ(-90deg);
}

svg circle {
  stroke-dasharray: 440px;
  stroke-dashoffset: 0px;
  stroke-linecap: round;
  stroke-width: 8px;
  stroke: #00479D;
  fill:none;
  animation: countdown 10s linear infinite forwards;
}

@keyframes countdown {
  from {
    stroke-dashoffset: 0px;
  }
  to {
    stroke-dashoffset: 440px;
  }
}
/* Firefox < 16 */
@-moz-keyframes countdown {
  from {
    stroke-dashoffset: 0px;
  }
  to {
    stroke-dashoffset: 440px;
  } { opacity: 1; }
}

/* Safari, Chrome and Opera > 12.1 */
@-webkit-keyframes countdown {
  from {
    stroke-dashoffset: 0px;
  }
  to {
    stroke-dashoffset: 440px;
  }  { opacity: 1; }
}

/* Internet Explorer */
@-ms-keyframes countdown {
  from {
    stroke-dashoffset: 0px;
  }
  to {
    stroke-dashoffset: 440px;
  }   { opacity: 1; }
}

/* Opera < 12.1 */
@-o-keyframes countdown {
  from {
    stroke-dashoffset: 0px;
  }
  to {
    stroke-dashoffset: 440px;
  }
}
