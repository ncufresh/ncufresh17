$(document).ready(function() {

	//Beginning
	$('.game, #countdown, .row3, #btn8, #btn9').hide();
	$('.btn5').parent().hide();
	//Beginning

	//rules
	$('#btn3').click(function(){
		$('.btn1').hide();
		$('.box').css("background-image", "url(gamerules.png)");
		$(this).parent().hide(); //hide all buttons
		$('.btn5').parent().show();
		$('.btn6, .btn7').show();
	});

	$('.btn5').click(function(){
		$(this).parent().hide();
		$('#btn3').parent().show();
		$('.btn1').show();
		
	});
